@model Employee

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Employee</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="EmployeeName"></label>
            <input class="form-control" asp-for="EmployeeName" />
            <span class="text-danger" asp-validation-for="EmployeeName"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Age"></label>
            <input class="form-control" asp-for="Age" />
            <span class="text-danger" asp-validation-for="Age"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Salary"></label>
            <input class="form-control" asp-for="Salary" />
            <span class="text-danger" asp-validation-for="Salary"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-primary m-3">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}